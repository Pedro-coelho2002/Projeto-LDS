@model UnidadeMedida

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-controller="UnidadeMedida" asp-action="Edit">
	<div class="border m-2 p-4">
		<div class="row pb-2">
			<h2 class="text-primary">Editar unidade medida</h2>
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Id" class="form-label"></label>
			<input asp-for="Id" class="form-control" disabled />
		</div>
		<div class="mb-3">
			<label asp-for="UniMedida" class="form-label">Unidade Medida</label>
			<input asp-for="UniMedida" class="form-control" />
			<span asp-validation-for="UniMedida" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Editar</button>
		<a asp-controller="UnidadeMedida" asp-action="Index" class="btn btn-secondary">Voltar</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}