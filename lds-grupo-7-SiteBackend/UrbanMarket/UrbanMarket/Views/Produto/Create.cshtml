@model Produto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="border m-2 p-4">
        <div class="row pb-2">
            <h2 class="text-primary">Novo Produto</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome do Produto</label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="LinkImagem" class="form-label">URL para a imagem</label>
            <input asp-for="LinkImagem" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CategoriaProdutoId">Categoria do produto</label>
            <select asp-for="CategoriaProdutoId" class="form-control">
                <option value="">Selecione uma Categoria</option>
                @foreach (CategoriaProduto categoria in ViewBag.Categorias)
                {
                    <option value="@categoria.Id">@categoria.Categoria</option>
                }
            </select>
            <span asp-validation-for="CategoriaProdutoId" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="UnidMedidaId">Unidade de medida</label>
            <select asp-for="UnidMedidaId" class="form-control">
                <option value="">Selecione uma Unidade de Medida</option>
                @foreach (UnidadeMedida unidadeMedida in ViewBag.UnidadesMedidas)
                {
                    <option value="@unidadeMedida.Id">@unidadeMedida.UniMedida</option>
                }
            </select>
            <span asp-validation-for="UnidMedidaId" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Criar</button>
			<a asp-controller="Produto" asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>        
    </div>
</form>