@model Produto

@{
	ViewData["Title"] = "Delete";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Excluir Produto</h2>

<p>Você tem certeza de que deseja excluir o produto abaixo?</p>

<div>
	<h4>Detalhes do Produto</h4>
	<hr />
	<dl class="row">
		<div class="col-md-6">
			<dt class="col-sm-2">Id</dt>
			<dd class="col-sm-10">@Model.Id</dd>

			<dt class="col-sm-2">Nome</dt>
			<dd class="col-sm-10">@Model.Nome</dd>
		</div>
		<div class="col-md-6">
			<div class="text-center">
				<img src="@Model.LinkImagem" class="rounded" style="width: 280px; height: 254px;">
			</div>
		</div>
	</dl>

	<form asp-action="Delete" method="post">
		@Html.AntiForgeryToken()
		<input type="hidden" asp-for="Id" />

		<div class="form-group">
			<input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
			<a asp-action="Index" class="btn btn-primary">Cancelar</a>
		</div>
	</form>
</div>

