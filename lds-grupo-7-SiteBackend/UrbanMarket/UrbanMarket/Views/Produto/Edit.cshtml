@model Produto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Produto</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LinkImagem"></label>
        <input asp-for="LinkImagem" class="form-control" />
        <span asp-validation-for="LinkImagem" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaProdutoId"></label>
        <select asp-for="CategoriaProdutoId" class="form-control">
            <option value="">Selecione uma Categoria</option>
            @foreach (CategoriaProduto categoria in ViewBag.Categorias)
            {
                <option value="@categoria.Id">@categoria.Categoria</option>
            }
        </select>
        <span asp-validation-for="CategoriaProdutoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UnidMedidaId"></label>
        <select asp-for="UnidMedidaId" class="form-control">
            <option value="">Selecione uma Unidade de Medida</option>
            @foreach (UnidadeMedida unidadeMedida in ViewBag.UnidadesMedidas)
            {
                <option value="@unidadeMedida.Id">@unidadeMedida.UniMedida</option>
            }
        </select>
        <span asp-validation-for="UnidMedidaId" class="text-danger"></span>
    </div>
	<br />
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-controller="Produto" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>