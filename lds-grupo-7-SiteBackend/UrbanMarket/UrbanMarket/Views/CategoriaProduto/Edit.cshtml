@model CategoriaProduto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-controller="CategoriaProduto" asp-action="Edit">
    <div class="border m-2 p-4">
        <div class="row pb-2">
            <h2 class="text-primary">Editar Categoria</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Id" class="form-label"></label>
            <input asp-for="Id" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Categoria" class="form-label">Nome da categoria</label>
            <input asp-for="Categoria" class="form-control" />
            <span asp-validation-for="Categoria" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
        <a asp-controller="CategoriaProduto" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
